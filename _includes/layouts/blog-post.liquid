---
layout: layouts/base.liquid
---
<header class="wrapper">
    <div>
        <a href="/">
            <img src="/assets/img/site-id-purple.svg" class="no-border-radius" style="width: 200px; height: 90px;">
        </a>
    </div>
    <div class="purple-hamburger-circle">
        <input id="menu-toggle" type="checkbox">
        <label class="menu-button-container" for="menu-toggle">
            <div class="menu-button"></div>
        </label>
        <ul class="menu">
            <li>
                <a href="/campervan-eve" class="color-purple-600">Meet Eve</a>
            </li>
            <li>
                <a href="/whats-the-real-range" class="color-purple-600">Real Range</a>
            </li>
            <li>
                <a href="/million-pound-motorhomes" class="color-purple-600">Million Pound Motorhomes</a>
            </li>
            <li>
                <a href="https://www.quirkycampers.com/uk/campervan/301977/?wb-currency=GBP&ref=wilddrives" target="_blank" class="color-purple-800">
                    <i class="icon-trip"></i>Book Your Trip </a>
            </li>
        </ul>
    </div>
</header>
<main class="wrapper">
    <div class="container">
        <div class="text-align-right">
            <h1 class="color-purple-900 hero-text">{{ titleOne }} <br>
                <span class="color-purple-700">{{ titleTwo }}</span>
            </h1>
            <hr class="green-500-hr-right">
            <p>{{ description }}</p>
        </div>
        <div class="">
            <img src="/assets/img/wild-drives-4.jpg" class="rotate-143">
        </div>
    </div>

    {{ content }}
    
    <h2 class="color-purple-800">Follow our journey</h2>
    <hr class="yellow-500-hr">
    <div class="container-33-33-33">
        <div class="video-embed">
            <iframe src="https://www.youtube.com/embed/nIznmAHJNek" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        </div>
        <div>
            <h3 class="color-purple-900">Watch an update from <span class="color-purple-500">Wild Drives'</span> Founder </h3>
            <hr class="yellow-500-hr">
            <p>Lewis Nyman reflects on the the first season of Wild Drive's, and potential for the future of the business.</p>
            <a href="https://www.youtube.com/watch?v=nIznmAHJNek" target="_blank" class="link">
                Watch the video<i class="icon-chevron color-orange-400"></i></a>
            </a>
        </div>
        <div class="socials">
            <h4 class="color-green-50">Our Socials</h4>
            <hr class="yellow-500-hr-short">
            <p>
                <i class="icon-twitter rotate-787 color-yellow-50 background-color-twitter"></i> <a href="https://twitter.com/wild_drives">Follow us on Twitter</a>
            </p>
            <p>
                <i class="icon-instagram rotate-676 color-yellow-50 background-color-instagram"></i> <a href="https://www.instagram.com/wilddrives/">Friend us on Instagram</a>
            </p>
            <p>
                <i class="icon-facebook rotate-326 color-yellow-50 background-color-facebook"></i> <a href="https://www.facebook.com/WildDrivesElectric">Friend us on Facebook</a>
            </p>
            <p>
                <i class="icon-email rotate-217 color-yellow-50 background-color-email"></i> <a href="mailto:hello@wilddrives.co.uk"> Email us</a>
            </p>
        </div>
    </div>
    <div class="newsletter rotate-074">
        <!-- Begin Mailchimp Signup Form -->
        <div id="mc_embed_signup" class="rotate-074-reverse">
            <form action="https://wilddrives.us14.list-manage.com/subscribe/post?u=b0e5e932a73fee4ea809d7789&amp;id=45c57930eb&amp;f_id=00f588e0f0" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_self">
                <div class="container container--no-margin" id="mc_embed_signup_scroll">
                <h2 class="color-yellow-50 newsletter-heading">Join our newsletter.<br>
                    <span class="color-purple-400">No spam.</span>
                </h2>
                <div class="newsletter-inputs">
                    <div class="mc-field-group newsletter-email-input">
                        <label for="mce-EMAIL" class="color-yellow-50">Email Address <span class="asterisk">*</span></label>
                        <input type="email" value="" name="EMAIL" class="required email" id="mce-EMAIL" required>
                        <span id="mce-EMAIL-HELPERTEXT" class="helper_text"></span>
                    </div>
                    <input type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="cta">
                </div>
                <div hidden="true"><input type="hidden" name="tags" value="10458310"></div>
                    <div id="mce-responses" class="clear">
                        <div class="response" id="mce-error-response" style="display:none"></div>
                        <div class="response" id="mce-success-response" style="display:none"></div>
                    </div>    <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                    <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_b0e5e932a73fee4ea809d7789_45c57930eb" tabindex="-1" value=""></div>
                </div>
            </form>
        </div>
        <!--End mc_embed_signup-->
    </div>
</main>
